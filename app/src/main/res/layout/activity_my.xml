<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/custom_theme_background"
    tools:context=".MyActivity">

    <TextView
        android:id="@+id/main_screen_text"
        android:text="@string/hello_world"
        android:textColor="@color/custom_theme_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/normal_font"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_text_default"
        android:id="@+id/buttonResetText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_time"
        android:id="@+id/buttonShowTime"
        android:layout_alignTop="@+id/buttonResetText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/timerVal"
        android:id="@+id/textViewTimerId"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_button_start"
        android:id="@+id/buttonStart"
        android:layout_alignBottom="@+id/textViewTimerId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_button_stop"
        android:id="@+id/buttonStop"
        android:layout_toStartOf="@+id/main_screen_text"
        android:layout_toEndOf="@+id/buttonStart"
        android:layout_alignBottom="@+id/textViewTimerId"
        android:layout_toLeftOf="@+id/main_screen_text" />

</RelativeLayout>
