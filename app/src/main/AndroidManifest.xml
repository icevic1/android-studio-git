<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.victor.helloworld" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_title"
            android:icon="@drawable/home_128"
            android:parentActivityName="com.example.victor.helloworld.MyActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.victor.helloworld.MyActivity" />
        </activity>
        <activity
            android:name=".StopwatchActivity"
            android:label="@string/stopwatch_title_bar"
            android:icon="@drawable/home_128"
            android:parentActivityName="com.example.victor.helloworld.MyActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.victor.helloworld.MyActivity" />
        </activity>
        <activity
            android:name=".DatetimeActivity"
            android:label="@string/datetime_title_bar"
            android:icon="@drawable/date_time_128"
            android:parentActivityName="com.example.victor.helloworld.MyActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.victor.helloworld.MyActivity" />
        </activity>
    </application>

</manifest>
